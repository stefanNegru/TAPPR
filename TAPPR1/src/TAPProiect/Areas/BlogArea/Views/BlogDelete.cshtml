@model TAP.Web.Areas.BlogArea.Models.BlogDeleteViewModel

@{
    ViewData["Title"] = "Delete Blog";
}
<h3>Are you sure you want to delete this?</h3>
<div class="container">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(_ => _.BlogTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(_ => _.BlogTitle)
        </dd>
    </dl>
    @using (Html.BeginForm("Delete", "Songs", FormMethod.Post))
    {
        @Html.HiddenFor(_ => _.BlogId)
        @Html.HiddenFor(_ => _.UserId)
        @Html.AntiForgeryToken()
        <input type="submit" value="Delete" class="btn btn-danger"/>
    }
</div>